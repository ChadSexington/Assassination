<div class="well">
  <div class="row">
    <div class="span3">
      <div align="center" class="well well-small well-custom">
        <%= image_tag @player.photo.url, height: "256", width: "192" %>
      </div>
    </div>
    <div class="span6">
      <h2><%= @player.name %></h2>
      <p>
        <dl class="dl-horizontal">
          <dt>Red Hat Email</dt>
          <dd><%= mail_to @player.email, @player.email %></dd>
          <dt>Red Hat Profile</dt>
          <dd><%= link_to @player.username, "https://home.corp.redhat.com/user/#{@player.username}" %></dd>
          <dt>IRC Nick</dt>
          <dd><%= @player.irc_nick %></dd>
        </dl>
        <div class="well well-small">
          <%= @player.notes %>
        </div>
      </p>
    </div>
    <% if admin? %>
      <div class="span1">
        <%= link_to 'Edit', edit_player_path(@player), :class => "btn btn-custom span1" %><br><br>
        <%= link_to 'Delete', player_path(@player), method: :delete, data: { confirm: "Are you sure you want to delete this player? This is irreversible." }, :class => "btn btn-custom span1" %>
      </div>
    <% end %>
  </div>
</div>
