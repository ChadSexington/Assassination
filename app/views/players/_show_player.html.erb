<div class="well">
  <div class="row">
    <div class="col-md-3">
      <div align="center" class="well well-small well-custom">
        <%= image_tag @player.photo.url, height: "256", width: "192" %>
      </div>
    </div>
    <div class="col-md-6">
      <h2><%= if @player.nickname != @player.name.split(" ").first; @player.name; else; @player.nickname; end %></h2>
      <p>
        <dl class="dl-horizontal">
          <dt>Red Hat Email</dt>
          <dd><%= mail_to @player.email, @player.email %></dd>
          <dt>Red Hat Profile</dt>
          <dd><%= link_to @player.username, "https://home.corp.redhat.com/user/#{@player.username}" %></dd>
          <dt>IRC Nick</dt>
          <dd><%= @player.irc_nick %></dd>
          <dt>Wins</dt>
          <dd><%= @player.wins %></dd>
          <dt>Kills</dt>
          <dd><%= Kill.where(:player_id => @player.id).count %></dd>
          <dt>Deaths</dt>
          <dd><%= Death.where(:player_id => @player.id).count %></dd>
        </dl>
        <div class="well well-small">
          <%= @player.notes %>
        </div>
      </p>
    </div>
    <% if admin? || player_self?(@player) %>
      <div class="col-md-3">
        <div class="well well-small">
          <p class="text-center lead">
            Account Settings 
          </p>
          <p>
            <%= link_to 'Edit Player', edit_player_path(@player), :class => "btn btn-custom col-md-12", :style => "float:none" %>
            <%= link_to 'Change Password', "/players/change_password?id=#{@player.username}", :class => "btn btn-custom col-md-12", :style => "float:none" %>
            <%= link_to 'Delete Account', player_path(@player), method: :delete, data: { confirm: "Are you sure you want to delete #{@player.name}? This is irreversible." }, :class => "btn btn-custom col-md-12", :style => "float:none" %>
          </p>
        </div>
      </div>  
    <% end %>
  </div>
</div>
