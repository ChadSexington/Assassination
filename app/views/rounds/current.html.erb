<h1>Round <%= @round.id %></h1>
<div class="well">
  <div class="row">
    <div class="col-md-10">
      <dl class="dl-horizontal">
        <dt>Activation date:</dt>
          <dd><%= @round.created_at %></dd>
        <dt>Start date:</dt>
          <dd><%= @round.start_time %></dd>
        <dt>End date:</dt>
          <dd><%= @round.end_time %></dd>
        <dt>Number of players:</dt>
          <dd><%= @round.players.count %></dd>
        <dt>Active Assignments:</dt>
          <dd><%= @round.assignments.where(:active => true).count %></dd>
      </dl>
    </div>
    <div class="col-md-2">
      <div class="well well-small">
      <h4>Started:</h4>
      <% if @round.started? %>
        <span class="glyphicon glyphicon-ok"></span>
      <% else %>
        <span class="glyphicon glyphicon-remove"></span>
      <% end %>
      </div>
    </div>
  </div>
</div>
