<h1>Administer assignments</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Owner</th>
      <th>Target</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @assignments.each do |ass| %>
      <tr>
        <td><%= link_to Player.find(ass.player_id).name, edit_assignment_path(ass) %></td>
        <td><%= link_to Player.find(ass.target_id).name %></td>
        <td><%= if ass.active; "Ongoing"; else; "Completed"; end%></td>
      </tr>
    <% end %>
  </tbody>
</table>
