<h1>Administer players</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>IRC nick</th>
      <th>Admin</th>
      <th>Confirmed</th>
      <th>K/D ratio</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.name, edit_player_path(player) %></td>
        <td><%= player.email %></td>
        <td><%= player.irc_nick %></td>
        <td><%= if player.admin; "Yes"; else; "No"; end %></td>
        <td><%= if player.confirmed; "Yes"; else; "No"; end %></td>
        <td><%= Kill.where(:player_id => player.id).count %>/<%= Death.where(:player_id => player.id).count %></td>
        <% if player.banned %>
          <td><span class="text-danger">BANNED</td>
        <% else %>
          <td><%= link_to 'Ban Player', "/administration/ban_player/#{player.id}", data: { confirm: "Are you sure you would like to ban #{player.name}? This can be undone at any time." }, :class => "btn btn-custom" %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
